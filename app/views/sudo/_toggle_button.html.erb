<% if User.current.sudoer? %>
<style>
  .sudo { margin:0 5px; font-weight:normal !important; }
</style>
<% label = User.current.admin? ? 'sudo -k' : 'sudo -v' %>
<script>
  document.observe("dom:loaded", function() {
    var sudo_button = new Element('a', { 'class': 'sudo', 'href': '/sudo/toggle' }).update('[<%=label%>]')
    var sudo_span = new Element('span').update(sudo_button)
    $('loggedas').insert ({
      'bottom' : sudo_span
    });
  })
</script>
<% end %>
